{
  "name": "ulab-website",
  "description": "Website for ULAB.",
  "scripts": {
    "postdeploy": "bundle exec rake db:seed"
  },
  "env": {
    "BUGSNAG_API_KEY": {
      "description": "API key for Bugsnag",
      "required": true
    },
    "LANG": {
      "required": true
    },
    "LOGDNA_KEY": {
      "description": "Key to log to LogDNA",
      "required": true
    },
    "RACK_ENV": {
      "description": "Rack environment",
      "required": true
    },
    "RAILS_ENV": {
      "description": "Rails environment",
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "description": "Whether Rails logs to standard output",
      "required": true
    },
    "RAILS_MASTER_KEY": {
      "description": "Key used to decrypt YAML with credentials",
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "description": "Whether the app should serve static files (as opposed to leaving it to S3 etc.)",
      "required": true
    },
    "REDIS_URL": {
      "description": "URL for Redis server",
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql:hobby-dev",
    "logdna:quaco",
    "librato:development",
    "bugsnag:tauron"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "keywords": [
    "conference",
    "linguistics",
    "Rails",
    "Ruby"
  ],
  "logo": "https://s3.eu-west-2.amazonaws.com/ulab-website/icon.svg",
  "repository": "https://www.github.com/ulab-committee/ulab-website",
  "website": "https://www.ulab.org"
}
